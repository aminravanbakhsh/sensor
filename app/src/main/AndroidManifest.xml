<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sensor">

    <uses-feature
        android:name="android.hardware.sensor.proximity"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.gyroscope"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ShakeActivity"
            android:label="ShakeActivity"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".PositionActivity"
            android:label="PositionActivity"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".RotateActivity"
            android:label="RotateActivity"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".SetAlarmActivity"
            android:label="SetAlarmActivity"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".SetAlarmActivity2"
            android:label="SetAlarmActivity2"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".SelectMissionActivity"
            android:label="SelectMissionActivity"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".SetShakeActivity"
            android:label="SetShakeActivity"
            android:theme="@style/AppTheme"></activity>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SensorActivity"
            android:label="sensor"
            android:theme="@style/AppTheme" />

        <receiver android:name="MyBroadCast" />
        <receiver android:name=".MusicRunner" />
    </application>

</manifest>